<metal:block use-macro="here/global_defines/macros/defines" />
<div id="portlet-ads"
     i18n:domain="aaolm.portlet.advertising">

    <tal:page tal:condition="python: here.portal_type == 'Document'">
        <div tal:define="totalAds python: 1 + ((len(context.getText())) / 1024 / 4)"
               tal:repeat="sponsorAds python:range(0,totalAds)">
    
    		<div class="portletAdvertisingPortlet ad-feature"
    		     tal:define="ad view/randomNumber">
    			
    		        <a href="#" 
    		           tal:attributes="href python: 'http://www.pomacanthuspub.com/cgi-bin/adclick.cgi?gid=4&layout=multi&id=' + str(ad)">
    		            <img src="#" 
    		                 tal:attributes="src python:'http://www.pomacanthuspub.com/cgi-bin/adcycle.cgi?gid=4&layout=multi&id=' + str(ad)"
    		                 border="0"
    		                 width="250"
    		                 height="500"
    		                 alt="Click to Visit" />
    		        </a>
    	
    		</div>
    
            <p class="ad-spacer">&nbsp;</p>
    
    		<div class="portletAdvertisingPortlet ad-feature"
    		     tal:define="ad view/randomNumber">
    		        
    		        <a href="#" 
    		           tal:attributes="href python: 'http://www.pomacanthuspub.com/cgi-bin/adclick.cgi?gid=5&layout=multi&id=' + str(ad)">
    		            <img src="#" 
    		                 tal:attributes="src python:'http://www.pomacanthuspub.com/cgi-bin/adcycle.cgi?gid=5&layout=multi&id=' + str(ad)"
    		                 border="0"
    		                 width="250"
    		                 height="200"
    		                 alt="Click to Visit" />
    		        </a>
    	
    		</div>
    
            <p class="ad-spacer"
               tal:condition="python: sponsorAds != (totalAds - 1)">&nbsp;</p>
        </div>
   </tal:page>


   <tal:topic tal:condition="python: context.portal_type == 'Topic'"
              tal:define="totalAds python: 3"
              tal:repeat="sponsorAds python:range(0,totalAds)">

		<div class="portletAdvertisingPortlet ad-premium"
		     tal:define="ad view/randomNumber;
		                    size view/randomAd;">
		        
		        <a href="#" 
		           tal:attributes="href python: 'http://www.pomacanthuspub.com/cgi-bin/adclick.cgi?gid=' + str(size) + '&layout=multi&id=' + str(ad)">
		            <img src="#" 
		                 tal:attributes="src python:'http://www.pomacanthuspub.com/cgi-bin/adcycle.cgi?gid=' + str(size) + '&layout=multi&id=' + str(ad)"
		                 border="0"
		                 alt="Click to Visit" />
		        </a>
		                       
	
		</div>

        <p class="ad-spacer"
           tal:condition="python: sponsorAds != (totalAds - 1)">&nbsp;</p>
   </tal:topic>


   <tal:folder tal:condition="python: context.portal_type == 'Folder'"
               tal:define="totalAds python: 1"
               tal:repeat="sponsorAds python:range(0,totalAds)">

		<div class="portletAdvertisingPortlet ad-premium"
		     tal:define="ad view/randomNumber">
		        
		        <a href="#" 
		           tal:attributes="href python: 'http://www.pomacanthuspub.com/cgi-bin/adclick.cgi?gid=4&layout=multi&id=' + str(ad)">
		            <img src="#" 
		                 tal:attributes="src python:'http://www.pomacanthuspub.com/cgi-bin/adcycle.cgi?gid=4&layout=multi&id=' + str(ad)"
		                 border="0"
		                 width="250"
		                 height="500"
		                 alt="Click to Visit" />
		        </a>
		                       	
		</div>

        <p class="ad-spacer"
           tal:condition="python: sponsorAds != (totalAds - 1)">&nbsp;</p>
   </tal:folder>


   <tal:link tal:condition="python: context.portal_type in ['Link', 'Event', 'News Item',]"
             tal:define="totalAds python: 1;
                         size view/randomAd"
             tal:repeat="sponsorAds python:range(0,totalAds)">

		<div class="portletAdvertisingPortlet ad"
		     tal:define="ad view/randomNumber">
		        
		        <a href="#" 
		           tal:attributes="href python: 'http://www.pomacanthuspub.com/cgi-bin/adclick.cgi?gid=' + str(size) + '&layout=multi&id=' + str(ad)">
		            <img src="#" 
		                 tal:attributes="src python:'http://www.pomacanthuspub.com/cgi-bin/adcycle.cgi?gid=' + str(size) + '&layout=multi&id=' + str(ad)"
		                 border="0"
		                 width="250"
		                 height="200"
		                 alt="Click to Visit" />
		        </a>
		                       
		</div>

        <p class="ad-spacer"
           tal:condition="python: sponsorAds != (totalAds - 1)">&nbsp;</p>
   </tal:link>


   <tal:none tal:condition="python: context.portal_type not in ['Document', 'Topic', 'Folder', 'Link', 'Event']">
   
		<div class="portletAdvertisingPortlet ad-premium"
		     tal:define="ad view/randomNumber">
		        
		        <a href="#" 
		           tal:attributes="href python: 'http://www.pomacanthuspub.com/cgi-bin/adclick.cgi?gid=4&layout=multi&id=' + str(ad)">
		            <img src="#" 
		                 tal:attributes="src python:'http://www.pomacanthuspub.com/cgi-bin/adcycle.cgi?gid=4&layout=multi&id=' + str(ad)"
		                 border="0"
		                 width="250"
		                 height="500"
		                 alt="Click to Visit" />
		        </a>
	
		</div>

        <p class="ad-spacer">&nbsp;</p>

		<div class="portletAdvertisingPortlet ad-feature"
		     tal:define="ad view/randomNumber">

		        <a href="#" 
		           tal:attributes="href python: 'http://www.pomacanthuspub.com/cgi-bin/adclick.cgi?gid=5&layout=multi&id=' + str(ad)">
		            <img src="#" 
		                 tal:attributes="src python:'http://www.pomacanthuspub.com/cgi-bin/adcycle.cgi?gid=5&layout=multi&id=' + str(ad)"
		                 border="0"
		                 width="250"
		                 height="200"
		                 alt="Click to Visit" />
		        </a>
	
		</div>
   </tal:none>

</div>

