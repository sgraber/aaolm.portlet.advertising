<?xml version="1.0"?>
<object name="portal_skins"
        meta_type="Plone Skins Tool"
        allow_any="False"
        cookie_persistence="False"
        request_varname="plone_skin">


    <object name="advertising"
            meta_type="Filesystem Directory View"
            directory="aaolm.portlet.advertising:skins/advertising"
            
            />

    <skin-path name="*">
        
        <layer name="advertising"
               insert-after="custom" />
    </skin-path>

</object>
